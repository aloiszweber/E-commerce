section.featured-products
    div.container
        h2 Best products
        div.rowIndexBestProducts
            each product in bestProducts
                div.productIndexBestProducts(id=`${product.id}`)
                    img.image_product(id='product1' src=`${product.image}` alt=`${product.name}`)
                    h3.nameProduct= product.name
                    p.price= product.price
